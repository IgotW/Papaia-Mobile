<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PlansActivity"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_back"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:tint="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choose Your Plan"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/league_spartan_bold"
            android:gravity="center" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select the best plan for your farming needs"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/league_spartan"/>

            <!-- Free Plan -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Plan Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_leave"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="#38757575"
                            android:padding="6dp"
                            app:tint="#757575"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Free Plan"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#212121"
                                android:fontFamily="@font/league_spartan_semibold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Best for beginners"
                                android:background="@drawable/status_badge_healthy"
                                android:backgroundTint="#757575"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/league_spartan"
                                android:layout_marginTop="2dp"
                                android:padding="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ideal for: Beginners in farming or small scale farms"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/league_spartan"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₱0"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:textSize="24sp"
                                android:fontFamily="@font/league_spartan_bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/month"
                                android:textColor="#212121"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Features -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="Up to 10 scans/month"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="AI disease detection"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="Basic treatment recommendations"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="Mobile app access only"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_current_plan"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/button_rounded"
                        app:backgroundTint="#E0E0E0"
                        android:text="Current Plan"
                        android:textColor="#757575"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:enabled="false"
                        android:stateListAnimator="@null"
                        android:textAllCaps="false"
                        android:fontFamily="@font/league_spartan_semibold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Farmer Plan (PO) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Plan Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_user"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="#3300712D"
                            android:padding="6dp"
                            app:tint="@color/primary"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Farmer Plan"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#212121"
                                android:fontFamily="@font/league_spartan_semibold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="For solo farmers"
                                android:background="@drawable/status_badge_healthy"
                                android:backgroundTint="@color/primary"
                                android:textSize="12sp"
                                android:textColor="@color/primary"
                                android:fontFamily="@font/league_spartan"
                                android:layout_marginTop="2dp"
                                android:padding="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ideal for: Individual farmers"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/league_spartan"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₱199"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:textSize="24sp"
                                android:fontFamily="@font/league_spartan_bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/month"
                                android:textColor="#212121"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Features -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="100 scans/month"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="Disease detection + treatment"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="Treatment reminders"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="Basic farm analytics"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_pro_plan"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/button_rounded"
                        app:backgroundTint="@color/primary"
                        android:text="Choose Plan"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:stateListAnimator="@null"
                        android:textAllCaps="false"
                        android:fontFamily="@font/league_spartan_semibold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Basic Plan -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Badge -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Most Popular"
                        android:background="@drawable/button_rounded"
                        android:backgroundTint="#FFC107"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:fontFamily="@font/league_spartan_semibold"
                        android:layout_marginBottom="8dp"/>

                    <!-- Plan Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_users"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="#FFF8E1"
                            android:padding="6dp"
                            app:tint="#FFC107"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Basic Plan"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#212121"
                                android:fontFamily="@font/league_spartan_semibold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Up to 5 farmers"
                                android:background="@drawable/status_badge_healthy"
                                android:backgroundTint="#FFC107"
                                android:textSize="12sp"
                                android:textColor="#FFC107"
                                android:fontFamily="@font/league_spartan"
                                android:layout_marginTop="2dp"
                                android:padding="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ideal for: Small farm owners or cooperatives"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/league_spartan"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₱699"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:textSize="24sp"
                                android:fontFamily="@font/league_spartan_bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/month"
                                android:textColor="#212121"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Features -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="All Farmer Plan features"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="Web dashboard"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="Multi-farm analytics"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="Real-time monitoring"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/league_spartan"/>
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_manager_plan"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/button_rounded"
                        app:backgroundTint="#FFC107"
                        android:text="Choose Plan"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:stateListAnimator="@null"
                        android:textAllCaps="false"
                        android:fontFamily="@font/league_spartan_semibold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Enterprise Plan -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Plan Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_enterprise"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="#166534"
                            android:padding="6dp"
                            app:tint="@color/white"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enterprise Plan"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#212121"
                                android:fontFamily="@font/league_spartan_semibold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Large-scale operations"
                                android:background="@drawable/status_badge_healthy"
                                android:backgroundTint="#166534"
