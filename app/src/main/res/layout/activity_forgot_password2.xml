<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPassword2Activity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <!-- Header with Back Arrow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/fg2_back_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_back"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verification"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/league_spartan_bold"
                android:gravity="center"
                android:layout_marginEnd="32dp"/>
        </LinearLayout>

        <!-- Email Icon in Circle -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/circle_opacity">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_email2"
                android:tint="@color/tertiary"/>
        </FrameLayout>

        <!-- Main Heading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/league_spartan_extrabold"
            android:text="Enter Confirmation Code"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:letterSpacing=".02"
            android:gravity="center_horizontal"
            android:layout_marginTop="32dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We've sent a 4-digit code to your email.\nPlease enter it below to continue."
            android:gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="#646463"
            android:fontFamily="@font/league_spartan"
            android:lineSpacingExtra="2dp"/>

        <!-- OTP Input Fields -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <EditText
                android:id="@+id/edittext_code_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/otp_input_selector"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/quarternary"
                android:maxLength="1"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/league_spartan_bold"
                android:inputType="number"
                android:textCursorDrawable="@null"/>

            <EditText
                android:id="@+id/edittext_code_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/otp_input_selector"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/quarternary"
                android:maxLength="1"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/league_spartan_bold"
                android:inputType="number"
                android:textCursorDrawable="@null"/>

            <EditText
                android:id="@+id/edittext_code_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/otp_input_selector"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/quarternary"
                android:maxLength="1"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/league_spartan_bold"
                android:inputType="number"
                android:textCursorDrawable="@null"/>

            <EditText
                android:id="@+id/edittext_code_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/otp_input_selector"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/quarternary"
                android:maxLength="1"
                android:fontFamily="@font/league_spartan_bold"
                android:inputType="number"
                android:textCursorDrawable="@null"/>
        </LinearLayout>

        <!-- Resend Code Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't receive a code? "
                android:textColor="#646463"
                android:textSize="14sp"
                android:fontFamily="@font/league_spartan"/>

            <TextView
                android:id="@+id/tv_resend_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:fontFamily="@font/league_spartan_bold"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- Verify Code Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_fg2_verify"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="32dp"
            android:text="Verify Code"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/league_spartan_bold"
            app:backgroundTint="#C4C4C4"
            app:cornerRadius="12dp"
            app:rippleColor="#FF8A61"
            android:textAllCaps="false"
            android:enabled="false"/>

        <!-- Timer Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code expires in "
                android:textColor="#9CA3AF"
                android:textSize="14sp"
                android:fontFamily="@font/league_spartan"/>

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:00"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:fontFamily="@font/league_spartan_bold"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>