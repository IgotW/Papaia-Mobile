<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp"
    android:elevation="8dp">

    <!-- ðŸŒ¿ Title -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reactivate Account"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1B5E20"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- ðŸ“ Description -->
    <TextView
        android:id="@+id/tvDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your account is currently deactivated. Would you like to reactivate it now?"
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:lineSpacingExtra="2dp" />

    <!-- ðŸŒ± Buttons Row -->
    <LinearLayout
        android:id="@+id/dialogButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <!-- âŒ No Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_no"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:paddingHorizontal="12dp"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="#333333"
            android:backgroundTint="#E0E0E0"
            app:rippleColor="#33000000"
            app:cornerRadius="14dp"
            app:elevation="2dp" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <!-- âœ… Yes Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_yes"
            style="?attr/materialButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:paddingHorizontal="8dp"
            android:ellipsize="none"
            android:singleLine="false"
            android:gravity="center"
            android:text="Yes,\nReactivate"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:lineSpacingExtra="2dp"
            android:backgroundTint="@color/primary"
            app:rippleColor="#66FFFFFF"
            app:cornerRadius="14dp"
            app:elevation="3dp" />
    </LinearLayout>

</LinearLayout>
