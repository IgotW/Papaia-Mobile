<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register3Activity"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:background="@drawable/bottom_curve"
            android:backgroundTint="@color/yellowgreen"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_back"
            android:layout_marginTop="-210dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:fontFamily="@font/league_spartan_bold"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your account"
            android:textColor="@color/black"
            android:fontFamily="@font/league_spartan"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:padding="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/done_check"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="@color/primary" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/done_check"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="@color/primary" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/done_check"/>
        </LinearLayout>

        <EditText
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/edit_textbox_rounded"
            android:layout_gravity="center"
            android:hint="Street"
            android:textColorHint="@color/quarternary"
            android:fontFamily="@font/league_spartan"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:drawableStart="@drawable/location"
            android:drawablePadding="12dp"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/edit_textbox_rounded"
            android:layout_gravity="center"
            android:hint="Barangay"
            android:textColorHint="@color/quarternary"
            android:fontFamily="@font/league_spartan"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/location"
            android:drawablePadding="12dp"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/edit_textbox_rounded"
            android:layout_gravity="center"
            android:hint="Municipality"
            android:textColorHint="@color/quarternary"
            android:fontFamily="@font/league_spartan"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/location"
            android:drawablePadding="12dp"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/edit_textbox_rounded"
            android:layout_gravity="center"
            android:hint="Province/City"
            android:textColorHint="@color/quarternary"
            android:fontFamily="@font/league_spartan"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/location"
            android:drawablePadding="12dp"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/edit_textbox_rounded"
            android:layout_gravity="center"
            android:hint="Zip Code"
            android:textColorHint="@color/quarternary"
            android:fontFamily="@font/league_spartan"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/location"
            android:drawablePadding="12dp"/>
        <Button
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/button_rounded"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>