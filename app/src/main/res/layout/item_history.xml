<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Disease Image with circular background -->
        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="top">
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageview_disease_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image_no_content"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </FrameLayout>


        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Header Row with timestamp and status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtTimestamp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Today, 2:34 PM"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:fontFamily="@font/league_spartan"/>

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disease Detected"
                    android:textColor="@color/tertiary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/status_badge_diseased"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:fontFamily="@font/league_spartan"/>
            </LinearLayout>

            <!-- Date -->
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 18, 2024"
                android:textColor="#9CA3AF"
                android:textSize="11sp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/league_spartan"/>

            <!-- Disease Name -->
            <TextView
                android:id="@+id/txtPrediction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anthracnose"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/league_spartan_bold"/>

            <!-- Description -->
            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply copper-based fungicide. Remove infected leaves immediately."
                android:textColor="#6B7280"
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/league_spartan"/>

            <!-- View Details Button -->
            <TextView
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details â†’"
                android:textColor="@color/tertiary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:paddingVertical="4dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/league_spartan_bold"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>