<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPassword1Activity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:background="@color/white">

        <!-- Header with Back Arrow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/fg1_back_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_back"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset Password"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/league_spartan_bold"
                android:gravity="center"
                android:layout_marginEnd="32dp"/>
        </LinearLayout>

        <!-- Lock Icon in Circle -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/circle_opacity"
            android:backgroundTint="@color/tertiary">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_lock"
                android:tint="@color/tertiary"/>
        </FrameLayout>

        <!-- Main Heading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/league_spartan_extrabold"
            android:text="Forgot Password?"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:letterSpacing=".02"
            android:gravity="center_horizontal"
            android:layout_marginTop="32dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your registered email to reset your password."
            android:gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="#646463"
            android:fontFamily="@font/league_spartan"
            android:lineSpacingExtra="2dp"/>

        <!-- Email Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/league_spartan_semibold"
            android:text="Email Address"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeColor="#E0E0E0"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/primary"
            app:hintEnabled="false"
            app:endIconMode="custom"
            app:startIconDrawable="@drawable/ic_email2"
            app:startIconTint="#9CA3AF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_fg1_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your email address"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="#757575"
                android:textSize="16sp"
                android:fontFamily="@font/league_spartan"
                android:padding="18dp"/>
        </com.google.android.material.textfield.TextInputLayout>



        <!-- Send Reset Link Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_fg1_send"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="32dp"
            android:text="Send Reset Link"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/league_spartan_semibold"
            app:backgroundTint="@color/tertiary"
            app:cornerRadius="12dp"
            app:rippleColor="#FF8A61"
            android:textAllCaps="false"/>

        <!-- Bottom Text with Sign In Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember your password? "
                android:textColor="#646463"
                android:textSize="14sp"
                android:fontFamily="@font/league_spartan"/>

            <TextView
                android:id="@+id/tv_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="@color/tertiary"
                android:textSize="14sp"
                android:fontFamily="@font/league_spartan_bold"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>