<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    tools:context=".activity.ScanFragment">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="80dp"
        android:background="#F5F5F5">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Disease Scanner"
                android:textColor="@color/black"
                android:fontFamily="@font/league_spartan_bold"
                android:textSize="24sp"
                android:gravity="center"/>

        </LinearLayout>

        <!-- Instructions Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Point your camera at the papaya leaf or fruit and tap Scan."
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="32dp"
            android:lineSpacingExtra="4dp"/>

        <!-- Camera Preview Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp">

<!--            &lt;!&ndash; Camera Preview &ndash;&gt;-->
<!--            <androidx.camera.view.PreviewView-->
<!--                android:id="@+id/previewView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@drawable/camera_preview_background"/>-->

<!--            <ImageView-->
<!--                android:id="@+id/capturedImageView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:visibility="gone"-->
<!--                android:background="#000" />-->
            <!-- Rounded container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                android:clipToOutline="true">

                <androidx.camera.view.PreviewView
                    android:id="@+id/previewView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/capturedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:background="#000" />

            <!-- Flash Toggle -->
            <ImageView
                android:id="@+id/flash_toggle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:src="@drawable/ic_flash_off"
                android:background="@drawable/flash_button_background"
                android:padding="12dp"
                android:backgroundTint="#80000000"/>

        </FrameLayout>

        <!-- Bottom Actions with Safe Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp"
            android:gravity="center">

            <FrameLayout
                android:id="@+id/imageGallery"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="@color/primary"
                android:elevation="4dp"
                android:layout_marginLeft="-90dp"
                android:layout_marginRight="50dp">

<!--                <ImageView-->
<!--                    android:id="@+id/galleryThumbnail"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:scaleType="centerCrop"-->
<!--                    android:src="@drawable/upload" />-->

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/galleryThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upload"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="2dp"/>


            </FrameLayout>

            <!-- Capture Button -->
            <FrameLayout
                android:id="@+id/btnCapture"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/scan_button_background"
                android:backgroundTint="#FF5722"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera"
                    android:tint="@android:color/white"/>

            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/captureActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp"
            android:gravity="center"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetake"
                style="?attr/materialButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Retake"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/gray"
                app:rippleColor="#FF9100"
                app:cornerRadius="12dp"
                android:padding="12dp"
                android:elevation="3dp"
                android:insetTop="6dp"
                android:insetBottom="6dp"
                android:visibility="gone"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUsePhoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Use Photo"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary"
                app:rippleColor="#80FFFFFF"
                app:cornerRadius="12dp"
                android:padding="12dp"
                android:elevation="3dp"
                android:insetTop="6dp"
                android:insetBottom="6dp"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>
</FrameLayout>