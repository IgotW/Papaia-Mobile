<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditProfileActivity"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header with back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_back"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Account"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/league_spartan" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Profile Picture Section -->
<!--            <FrameLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center">-->

<!--                &lt;!&ndash; Profile Picture &ndash;&gt;-->
<!--                <de.hdodenhof.circleimageview.CircleImageView-->
<!--                    android:id="@+id/imageview_edit_profilepic"-->
<!--                    android:layout_width="120dp"-->
<!--                    android:layout_height="120dp"-->
<!--                    android:src="@drawable/userprofile"-->
<!--                    android:scaleType="centerCrop"-->
<!--                    android:layout_gravity="center" />-->

<!--                &lt;!&ndash; Blur Overlay (same size as profile picture) &ndash;&gt;-->
<!--                <View-->
<!--                    android:id="@+id/overlay_blur"-->
<!--                    android:layout_width="120dp"-->
<!--                    android:layout_height="120dp"-->
<!--                    android:background="#80000000"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:clickable="true"-->
<!--                    android:focusable="true"-->
<!--                    android:visibility="gone" />-->

<!--                &lt;!&ndash; Change Photo Button &ndash;&gt;-->
<!--                <ImageView-->
<!--                    android:id="@+id/btn_change_photo"-->
<!--                    android:layout_width="32dp"-->
<!--                    android:layout_height="32dp"-->
<!--                    android:layout_gravity="bottom|end"-->
<!--                    android:layout_margin="4dp"-->
<!--                    android:background="@drawable/camera_button_selector"-->
<!--                    android:padding="6dp"-->
<!--                    android:src="@drawable/camera"-->
<!--                    android:tint="@android:color/white" />-->
<!--            </FrameLayout>-->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <!-- Profile Picture -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview_edit_profilepic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/userprofile"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />

                <!-- Change Photo Button -->
                <ImageView
                    android:id="@+id/btn_change_photo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:background="@drawable/camera_button_selector"
                    android:padding="6dp"
                    android:src="@drawable/camera"
                    android:tint="@android:color/white" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Tap to change profile photo"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/league_spartan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Username"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/league_spartan_semibold" />
            <!-- Username Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxBackgroundColor="#F5F5F5"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/primary"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_edit_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:padding="18dp"
                    android:textColor="#A8A7A7"
                    android:focusable="false"
                    android:clickable="false"
                    android:fontFamily="@font/league_spartan" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Name Fields Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="First Name"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:fontFamily="@font/league_spartan_semibold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxStrokeColor="#E0E0E0"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="@color/primary"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edittext_edit_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/league_spartan" />

                </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Last Name"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:fontFamily="@font/league_spartan_semibold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxStrokeColor="#E0E0E0"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="@color/primary"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edittext_edit_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/league_spartan" />

                </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- Middle Name Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Middle Name"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/league_spartan_semibold" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxBackgroundColor="@android:color/white"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/primary"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_edit_middlename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Middle Name"
                    android:inputType="textPersonName"
                    android:textSize="16sp"
                    android:padding="18dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/league_spartan" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Suffix Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Suffix"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/league_spartan_semibold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxBackgroundColor="@android:color/white"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/primary"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_edit_suffix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Suffix (Jr., Sr., III, etc.)"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:padding="18dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/league_spartan" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contact Number Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Contact Number"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/league_spartan_semibold" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxBackgroundColor="@android:color/white"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/primary"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/phone_icon"
                app:endIconTint="#9CA3AF"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_edit_contactnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your contact number"
                    android:inputType="phone"
                    android:textSize="16sp"
                    android:padding="18dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/league_spartan" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Birth Date Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Birth Date"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/league_spartan_semibold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxBackgroundColor="@android:color/white"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/primary"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconTint="#9CA3AF"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_edit_birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select your birth date"
                    android:inputType="none"
                    android:textSize="16sp"
                    android:padding="18dp"
                    android:textColor="@color/black"
                    android:focusable="false"
                    android:clickable="true"
                    android:fontFamily="@font/league_spartan" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email Address Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Email Address"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/league_spartan_semibold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxBackgroundColor="#F5F5F5"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/primary"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_email2"
                app:endIconTint="#9CA3AF"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your email address"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:padding="18dp"
                    android:textColor="#A8A7A7"
                    android:focusable="false"
                    android:clickable="false"
                    android:fontFamily="@font/league_spartan" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/league_spartan" />

            <!-- Street Address Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Street"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/league_spartan_semibold" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxBackgroundColor="@android:color/white"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/primary"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_edit_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Street Address (House No., Street Name)"
                    android:inputType="textPostalAddress"
                    android:textSize="16sp"
                    android:padding="18dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/league_spartan" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Barangay Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Barangay"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/league_spartan_semibold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxBackgroundColor="@android:color/white"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/primary"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_edit_barangay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Barangay"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:padding="18dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/league_spartan" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Municipality and Zip Code Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginEnd="8dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxStrokeColor="#E0E0E0"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="@color/primary"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edittext_edit_municipality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Municipality/City"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/league_spartan" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxStrokeColor="#E0E0E0"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="@color/primary"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edittext_edit_zipcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ZIP Code"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/league_spartan" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Province Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Province"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/league_spartan_semibold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="#E0E0E0"
                app:boxBackgroundColor="@android:color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/edittext_edit_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Province"
                    android:inputType="none"
                    android:fontFamily="@font/league_spartan"
                    android:textSize="16sp"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Save Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@android:color/white"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_changes"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Save Changes"
            android:backgroundTint="@color/tertiary"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/league_spartan"
            android:elevation="2dp"
            app:cornerRadius="12dp"
            app:rippleColor="#FFE55A2B"
            app:strokeWidth="0dp"/>

    </LinearLayout>

</LinearLayout>