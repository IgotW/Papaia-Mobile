<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <!-- Background image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background" />

    <!-- Foreground content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Top Section with App Branding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/gradient_background"
            android:fitsSystemWindows="true">

            <!-- App Icon -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp">

                <!-- Background stays fixed -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/app_icon_background"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />

                <!-- Logo -->
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/papaialogo"
                    android:layout_gravity="center" />
            </FrameLayout>

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Papaia"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/league_spartan_bold" />

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agricultural AI Assistant"
                android:textColor="#E8F5E8"
                android:textSize="16sp"
                android:fontFamily="@font/league_spartan" />
        </LinearLayout>

        <!-- Body Content -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="Welcome Back"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:letterSpacing=".05"
            android:fontFamily="@font/league_spartan_bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log in your account"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/league_spartan" />

        <EditText
            android:id="@+id/login_edittext_username"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/edit_textbox_rounded"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:hint="Email/Username"
            android:textColorHint="@color/quarternary"
            android:textColor="@color/quarternary"
            android:textSize="16sp"
            android:paddingLeft="20dp"
            android:drawableStart="@drawable/emailsmall"
            android:drawablePadding="12dp"
            android:fontFamily="@font/league_spartan" />

        <EditText
            android:id="@+id/login_edittext_password"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/edit_textbox_rounded"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:textColorHint="@color/quarternary"
            android:textColor="@color/quarternary"
            android:textSize="16sp"
            android:paddingLeft="20dp"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="12dp"
            android:inputType="textPassword"
            android:fontFamily="@font/league_spartan" />

