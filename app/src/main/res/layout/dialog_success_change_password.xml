<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background"
    android:gravity="center_horizontal"
    android:elevation="8dp">

    <!-- âœ… Success Icon -->
    <ImageView
        android:id="@+id/iconSuccess"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_success_check"
        android:contentDescription="Success Icon"
        android:layout_marginBottom="16dp" />

    <!-- ðŸŒ¿ Title -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password Changed!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- ðŸ“ Description -->
    <TextView
        android:id="@+id/tvDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your password has been updated successfully. Please use your new password next time you log in."
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:lineSpacingExtra="2dp" />

    <!-- ðŸ”˜ OK Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_ok"
        style="?attr/materialButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="OK"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary"
        app:rippleColor="#80FFFFFF"
        app:cornerRadius="12dp"
        app:elevation="3dp" />

</LinearLayout>
