<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="22dp"
    android:background="@drawable/dialog_background"
    android:clipToPadding="false">

    <!-- ðŸŒ¿ Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan Result"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:paddingBottom="10dp"
        android:fontFamily="@font/league_spartan_bold"/>

    <!-- ðŸ“¸ Disease Image -->
    <ImageView
        android:id="@+id/iv_result_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="14dp"
        android:background="@drawable/image_no_content"
        android:contentDescription="Detected disease image" />

    <!-- ðŸ§  Prediction Result -->
    <TextView
        android:id="@+id/tv_prediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Healthy"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:fontFamily="@font/league_spartan_semibold"/>

    <!-- ðŸ” Confidence Level -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">
        <TextView
            android:id="@+id/tv_confidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confidence: 97.23%"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#555555"
            android:gravity="center"
            android:fontFamily="@font/league_spartan"/>
    </LinearLayout>

    <!-- ðŸŒ± Scrollable Remedy Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_remedy_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treatment Suggestions:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/league_spartan_semibold"/>

            <TextView
                android:id="@+id/tv_remedy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remedy or treatment steps will appear here."
                android:textSize="16sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"
                android:background="#F7F7F7"
                android:padding="10dp"
                android:backgroundTintMode="src_in"
                android:elevation="2dp"
                android:clipToOutline="true"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/league_spartan"/>
        </LinearLayout>
    </ScrollView>

    <!-- âœ… Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
