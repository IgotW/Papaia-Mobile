<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".activity.ScanResultDetailsActivity">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_back"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Scan Result"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/league_spartan_bold"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Plant Image Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/plantImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_no_content" />

            </androidx.cardview.widget.CardView>

            <!-- Disease Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/diseaseStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš  Diseased"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/tertiary"
                    android:fontFamily="@font/league_spartan_semibold"/>

            </LinearLayout>

            <!-- Disease Information Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/diseaseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Papaya Ring Spot Virus"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/league_spartan_semibold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Confidence: "
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:lineSpacingExtra="2dp"
                            android:fontFamily="@font/league_spartan"/>
                        <TextView
                            android:id="@+id/confidenceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="94%"
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:lineSpacingExtra="2dp"
                            android:textStyle="italic"
                            android:fontFamily="@font/league_spartan_semibold"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Treatment Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/treatmentButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:text="Suggested Treatment"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_keyboard_arrow_down"
                app:iconGravity="end"
                app:iconTint="@android:color/white"
                android:letterSpacing="0"
                android:fontFamily="@font/league_spartan_bold"/>

            <!-- Treatment Text View -->
            <androidx.cardview.widget.CardView
                android:id="@+id/treatmentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="400dp">

                    <TextView
                        android:id="@+id/treatmentTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:textSize="14sp"
                        android:textColor="#616161"
                        android:lineSpacingExtra="2dp"
                        android:text="Treatment suggestions will appear here..." />

                </ScrollView>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>