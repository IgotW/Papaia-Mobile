<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Scan Result"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/shareButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/image_no_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

        </RelativeLayout>

        <!-- Plant Image Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/plantImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_no_content" />

        </androidx.cardview.widget.CardView>

        <!-- Disease Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/diseaseStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš  Diseased"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/tertiary" />

            <TextView
                android:id="@+id/scanStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Scan completed successfully"
                android:textSize="14sp"
                android:textColor="#757575" />

        </LinearLayout>

        <!-- Disease Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/diseaseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Papaya Ring Spot Virus"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Severity Level: "
                        android:textSize="14sp"
                        android:textColor="#616161" />

                    <TextView
                        android:id="@+id/severityLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F44336" />

                </LinearLayout>

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/line_graph" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Confidence: "
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#616161"
                        android:lineSpacingExtra="2dp" />
                    <TextView
                        android:id="@+id/confidenceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="94%"
                        android:textSize="14sp"
                        android:textColor="#616161"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Treatment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/treatmentButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:text="âš¡ Suggested Treatment"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_keyboard_arrow_down"
            app:iconGravity="end"
            app:iconTint="@android:color/white"
            android:letterSpacing="0" />

        <!-- Treatment Text View -->
        <androidx.cardview.widget.CardView
            android:id="@+id/treatmentCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="400dp">

                <TextView
                    android:id="@+id/treatmentTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:lineSpacingExtra="2dp"
                    android:text="Treatment suggestions will appear here..." />

            </ScrollView>

        </androidx.cardview.widget.CardView>

        <!-- Bottom Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/scanAgainButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸ“· Scan Again"
                android:textColor="#616161"
                android:textSize="14sp"
                app:backgroundTint="@android:color/white"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                android:letterSpacing="0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewHistoryButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ðŸ“Š View History"
                android:textColor="#616161"
                android:textSize="14sp"
                app:backgroundTint="@android:color/white"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                android:letterSpacing="0" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>