<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E6F3D6"
                android:endColor="#FFF9E6"
                android:angle="90" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#D9EAD3" />
            <size
                android:width="200dp"
                android:height="200dp" />
            <padding
                android:top="100dp"
                android:left="50dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFE6CC" />
            <size
                android:width="300dp"
                android:height="300dp" />
            <padding
                android:top="200dp"
                android:left="100dp" />
        </shape>
    </item>
</layer-list>